production: &production
  app: waterfall-<%= app_name %>-production
  tag: production
  addons:
    - pgbackups:auto-week
    - memcache:5mb
    - logging:basic
    - scheduler:standard
  config: &production-config
    BUNDLE_WITHOUT: "development:test"
    GOOGLE_ANALYTICS: "UA-12345678-1"


staging:
  <<: *production
  app: waterfall-<%= app_name %>-staging
